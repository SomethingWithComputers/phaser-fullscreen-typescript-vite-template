{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "composite": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "lib": ["ESNext", "DOM", "scripthost"],
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "outDir": "dist",
    "paths": {
      "@/*": ["./src/*"],
    },
    "removeComments": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": false,
    "target": "ESNext",
    "types": ["vite/client"],
    "useDefineForClassFields": true,
    "declaration": true
  },
  "exclude": ["**/public", "**/dist", "**/node_modules"],
  "include": [
    "src/*.ts",
    "src/*.d.ts",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "html/*.ts"
  ]
}
